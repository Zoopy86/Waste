<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"

                tools:context="com.zinc.zoopy.waste.EditWasteActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spent"
        android:id="@+id/ewa_tv_label"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textColor="#ff006aaa"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="0.0"
        android:gravity="right"
        android:textSize="41dp"
        android:ems="18"
        android:id="@+id/ewa_et_amount"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/ewa_tv_label"
        android:layout_toLeftOf="@+id/spinner_currency"
        android:layout_alignLeft="@+id/ewa_tv_label2"
        android:layout_alignStart="@+id/ewa_tv_label2"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_currency"
        android:layout_toRightOf="@+id/ewa_tv_label"
        android:layout_toEndOf="@+id/ewa_tv_label"
        android:textAlignment="center"
        android:layout_alignBottom="@id/ewa_et_amount"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ewa_et_usernote"
        android:hint="Supermarket"
        android:layout_below="@+id/ewa_tv_label2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save and exit"
        android:id="@+id/ewa_b_save"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/ewa_et_usernote"
        android:layout_centerHorizontal="true"
        android:background="#ff0073ff"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/reason_text"
        android:id="@+id/ewa_tv_label2"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:textColor="#ff006aaa"
        android:layout_below="@+id/ewa_et_amount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/spinner_category"
        android:layout_below="@+id/ewa_et_usernote"
        android:layout_alignLeft="@+id/ewa_tv_label"
        android:layout_alignStart="@+id/ewa_tv_label"
        android:layout_toLeftOf="@+id/spinner_currency"
        android:layout_toStartOf="@+id/spinner_currency"/>

</RelativeLayout>
