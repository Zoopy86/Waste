<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>

            <gradient
                android:startColor="#aa005fff"
                android:endColor="#fa005fff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#dcdcdc" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#78005fff"
                android:endColor="#c4005fff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#e6005fff" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>