<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zinc.zoopy.waste" >

    <application
        android:name=".Config"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="AA_DB_NAME"
            android:value="Waste.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.zinc.zoopy.waste.model.Waste, com.zinc.zoopy.waste.model.Category" />

        <activity
            android:name=".Statistic"
            android:label="@string/title_activity_statistic" >
        </activity>
        <activity
            android:name=".EditWasteActivity"
            android:label="@string/title_activity_edit_waste"
            android:parentActivityName=".Statistic" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zinc.zoopy.waste.Statistic" />
        </activity>
        <activity
            android:name=".PickCategory"
            android:label="@string/title_activity_pick_category" >
        </activity>
        <activity
            android:name=".EditCategory"
            android:label="@string/title_activity_edit_category"
            android:parentActivityName=".PickCategory" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zinc.zoopy.waste.PickCategory" />
        </activity>
        <activity
            android:name=".AddCategory"
            android:label="@string/title_activity_add_category"
            android:parentActivityName=".PickCategory" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zinc.zoopy.waste.PickCategory" />
        </activity>
    </application>

</manifest>
